<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer mt-4">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- add restaurant -->
<div class="container">
  <div class="row justify-content-end">
    <div class="d-grid gap-2 d-md-flex justify-content-md-end m-3">
      <a href="./restaurants/new" class="btn btn-info btn-sm" role="button">新增餐廳</a>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
      <div class="card-columns">

        {{#each restaurants}}
        <div class="card">
          <a href="./restaurants/{{ this._id }}" class="text-secondary">

            <img class="card-img-top" style="max-height: 240px;" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </a>


          <div class="card-footer">
            <div class="row justify-content-end">
              <a href="./restaurants/{{ this._id }}/edit" class="mr-3 mt-1">Edit</a>
              <a href="./restaurants/{{ this._id }}" class="mr-3 mt-1">Detail</a>
              
              <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-danger btn-sm mr-3 ">Delete</button>
              </form>
            </div>
          </div>
        </div>
        {{/each}}

      </div>
    </div>
  </div>
</div>